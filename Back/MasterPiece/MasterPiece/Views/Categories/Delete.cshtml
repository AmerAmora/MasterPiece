@model MasterPiece.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="text-align:center">
    <h3>Are you sure you want to delete <span style="color:#861523; font-weight: bolder;">@Model.Category_Name</span>?</h3>

</div>

<div style="text-align:center">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Category Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category_Name)
            </dd>

            <dt>
                Image
            </dt>

            <dd>
                <img src="../../AdminContent/CategoryImages/@Model.Category_Image" style="width:400px; height:400px" />
            </dd>

        </dl>
    </div>
    <p>
        <input type="submit" value="Delete" class="btn btn-default" /> |

        @Html.ActionLink("Edit", "Edit", new { id = Model.Category_id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
