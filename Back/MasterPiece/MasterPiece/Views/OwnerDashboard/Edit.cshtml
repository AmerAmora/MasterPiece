@model MasterPiece.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_OwnerDashboard.cshtml";
}
<div style="text-align:center">

    <h2>Edititing <span style="color:darkred">@Model.Product_Name</span></h2>
    </div>
    @using (Html.BeginForm("Edit", "OwnerDashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 50vh;">
                <div class="col-12 col-sm-8 col-md-10 col-lg-10 col-xl-8">
                    <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="index.html" class="">
                                <h3 class="text-primary"><img src="../../AdminContent/img/noCatsLogo.png" width="50px" height="50px"> NoCats</h3>
                            </a>
                            <h3>Edit Category</h3>
                        </div>

                        <h4>Product</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Product_id)
                        @Html.HiddenFor(model => model.Store_id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Product_Name, htmlAttributes: new { @class = "floatingText" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Product_Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Product_Name, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            @Html.LabelFor(model => model.Product_Price, htmlAttributes: new { @class = "floatingText" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Product_Price, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Product_Price, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "floatingText" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Product_Description, htmlAttributes: new { @class = "floatingText" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Product_Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Product_Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Category_id, "Category_id", htmlAttributes: new { @class = "floatingText" })
                            <div class="col-md-10">
                                @Html.DropDownList("Category_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Category_id, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Product_Image, htmlAttributes: new { @class = "floatingText" })
                            <div class="col-md-10">
                                <input type="file" class="form-control bg-dark" id="Product_Image" name="Product_Image" accept="image/*">
                            </div>
                        </div>
                        <br />

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Save Changes</button>
                                <div style="float:right">
                                    @Html.ActionLink("Back to List", "Index")
                                </div>
                            </div>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    }
