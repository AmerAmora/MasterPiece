
@{
    ViewBag.Title = "StoreSales";
    Layout = "~/Views/Shared/_OwnerDashboard.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-md-6">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-5">
                <i class="fa fa-chart-line fa-4x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Today Sale</p>
                    <h4 class="mb-0">@ViewBag.todaySales JOD</h4>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-5">
                <i class="fa fa-chart-bar fa-4x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Sale</p>
                    <h4 class="mb-0">@ViewBag.totalSales JOD</h4>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row g-4">
        <div class="col-md-6">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-5">
                <i class="fa fa-chart-area fa-4x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Today Revenue</p>
                    <h4 class="mb-0">@ViewBag.todaysRevenue JOD</h4>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-5">
                <i class="fa fa-chart-pie fa-4x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Revenue</p>
                    <h4 class="mb-0">@ViewBag.totalRevenue JOD</h4>
                </div>
            </div>
        </div>
    </div>
</div>

