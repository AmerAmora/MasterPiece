@model MasterPiece.Models.testimonial

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="text-align:center">
    <h2><span style="color:darkred">@Model.UserName </span> Testimonial Details</h2>
</div>
<div>
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 50vh;">
            <div class="col-12 col-sm-8 col-md-10 col-lg-10 col-xl-8">
                <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a href="index.html" class="">
                            <h3 class="text-primary"><img src="../../AdminContent/img/noCatsLogo.png" width="50px" height="50px"> NoCats</h3>
                        </a>
                        <h3>Edit Category</h3>
                    </div>

                    <h4>testimonial</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            User Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UserName)
                        </dd>

                        <dt>
User Image                        </dt>

                        <dd>
                            <img src="../../assets/img/@Model.userImage" style="height:250px; width:250px" />
                        </dd>

                        <dt>
Message
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.userMessage)
                        </dd>

                        <dt>
                                Change Action                        
                        </dt>

                        <dd>
                            @if (Model.isAccepted == false)
                            {
                                @Html.ActionLink("Show it", "Accept", new { id = Model.Testimonial_id }, new { @class = "btn btn-success" })

                            }
                            else
                            {
                                @Html.ActionLink("Delete it", "Reject", new { id = Model.Testimonial_id }, new { @class = "btn btn-danger" })

                            }
                        </dd>

                    </dl>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Testimonial_id }) |
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                </div>
                
            </div>
        </div>
    </div>
</div>
