@model MasterPiece.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Store Register</title>

    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Main CSS-->
    <link href="~/RegisterStoreContent/css/main.css" rel="stylesheet" media="all">
</head>

<body>

    <div class="page-wrapper bg-dark p-t-100 p-b-50">
        <div class="wrapper wrapper--w900">
            <div class="card card-6">
                <div class="card-heading">
                    <h2 class="title">Register Your Store</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("ShopRegister", "Account", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-row">
                            <div class="name">Owner Name</div>
                            <div class="value">
                                <input class="input--style-6" data-val="true" data-val-email="The First Name field is not a valid e-mail address." data-val-required="The firstName field is required." id="owerName" name="owerName" placeholder="Owner Name" type="text" value="" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Store Name</div>
                            <div class="value">
                                <input class="input--style-6" data-val="true" data-val-email="The Last Name field is not a valid e-mail address." data-val-required="The firstName field is required." id="storeName" name="storeName" placeholder="Store Name" type="text" value="" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Email address</div>
                            <div class="value">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "input--style-6", @placeholder = "Email" })
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Password</div>
                            <div class="value">
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "input--style-6", @placeholder = "Password" })
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Confirm Password</div>
                            <div class="value">
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input--style-6", @placeholder = "Confrim Password" })
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">Store Image</div>
                            <div class="value">
                                <div class="input-group js-input-file">
                                    <input type="file" class="input-file" id="file" name="Store_Image" accept=".jpg">
                                    <label class="label--file" for="file">Choose file</label>
                                    <span class="input-file__info">No file chosen</span>
                                </div>
                                <div class="label--desc">Upload your CV/Resume or any other relevant file. Max file size 50 MB</div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Store Commercial Record</div>
                            <div class="value">
                                <div class="input-group js-input-file">
                                    <input type="file" class="input-file" id="Comm" name="Commercial_Record" accept=".pdf,.docx">
                                    <label class="label--file" for="Comm">Choose file</label>
                                    <span class="input-file__info">No file chosen</span>
                                </div>
                                <div class="label--desc">Upload your CV/Resume or any other relevant file. Max file size 50 MB</div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button class="btn btn--radius-2 btn--blue-2" type="submit">Send Application</button>
                        </div>

                    }
                </div>

            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/RegisterStoreContent/vendor/jquery/jquery.min.js"></script>


    <!-- Main JS-->
    <script src="~/RegisterStoreContent/js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
<!-- end document-->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
