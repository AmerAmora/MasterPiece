@model IEnumerable<MasterPiece.Models.Store>
@{
    ViewBag.Title = "Stores";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}


<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg" style="background-image: url(../../assets/img/EvenBetter.png);">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Everything You Need</p>
                    <h1>Categories</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<!-- products -->
<div class="product-section mt-150 mb-150">
    <div class="container">



        <div class="row product-lists">
            @foreach (var item in Model)
            {


                <div class="col-lg-4 col-md-6 text-center">

                    <div class="single-product-item">
                        <div class="product-image">
                            <a href="SingleStore/@item.Store_id"><img src="../../Images/@item.Store_Image" alt=""></a>
                        </div>
                        <h3>
                            @item.Store_Name
                        </h3>
                        <a href="SingleStore/@item.Store_id" class="cart-btn">Browse Products</a>
                    </div>
                </div>
            }


        </div>


    </div>
</div>

